<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lm"
    tools:context="com.example.shiva.post.MainActivity">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="510dp"
    android:padding="10dp"
    >



<android.support.design.widget.FloatingActionButton

    android:layout_width="70dp"
    android:layout_height="70dp"
    android:id="@+id/floating"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"

    android:src="@drawable/ic_record_voice_over_black_24dp"
    app:backgroundTint="@color/whatsappgreen"></android.support.design.widget.FloatingActionButton>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="logout"
      android:layout_toLeftOf="@id/floating"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:padding="50dp"
      android:id="@+id/logout"
      />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="400dp">

<ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list"
    >

</ListView>

</RelativeLayout>



</RelativeLayout>

  </ScrollView>


</LinearLayout>
